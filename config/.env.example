# Axofuego Configuration Example
# Copy this file to .env and modify as needed

# GPIO Configuration
FIRE_GPIO_PINS=17,22,27,4,23,24,25,9
FIRE_GPIO_MOCK=false
FIRE_GPIO_ACTIVE_HIGH=false
FIRE_GPIO_HARDWARE_DELAY=0.01

# Safety Configuration
FIRE_SAFETY_MAX_DURATION=5.0
FIRE_SAFETY_ESTOP_PIN=
FIRE_SAFETY_AUTO_SHUTOFF=30.0

# Web Server Configuration
FIRE_WEB_HOST=0.0.0.0
FIRE_WEB_PORT=8765
FIRE_WEB_HTTP_PORT=8080
FIRE_WEB_STATIC=html

# Pattern Configuration
FIRE_PATTERN_DEFAULT_BPM=120
FIRE_PATTERN_MIN_BPM=60
FIRE_PATTERN_MAX_BPM=200
FIRE_PATTERN_TICK_RESOLUTION=16

# Logging Configuration
FIRE_LOG_LEVEL=INFO
FIRE_LOG_FILE=burningator.log
FIRE_LOG_MAX_SIZE=10485760
FIRE_LOG_BACKUP_COUNT=5